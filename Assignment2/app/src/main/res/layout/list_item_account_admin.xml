<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvListItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvListItemRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vai trò: User"
            android:textSize="14sp" />

        <!-- Ví dụ nếu bạn muốn hiển thị ID -->
        <!-- <TextView
            android:id="@+id/tvListItemAccountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textSize="12sp" /> -->
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnListItemEditAccount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="?attr/colorControlNormal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Sửa người dùng"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnListItemDeleteAccount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="?attr/colorControlNormal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Xóa người dùng" />
</LinearLayout>
